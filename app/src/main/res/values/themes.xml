<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Design" parent="Theme.AppCompat.DayNight.NoActionBar">

    </style>

    <!-- Base application theme. -->
    <style name="Design.App">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Window attributes -->
        <item name="android:windowBackground">@color/white</item>

        <!-- AlertDialog attributes -->
        <item name="alertDialogTheme">@style/Design.DialogAlert.Theme</item>
        <item name="alertDialogStyle">@style/Design.DialogAlert.Style</item>

        <!-- Toolbar styles -->
        <item name="toolbarStyle">@style/Design.Toolbar</item>

        <!-- Action Bar Styles -->
        <item name="actionOverflowButtonStyle">@style/Design.ActionOverflowButtonStyle</item>
    </style>

    <!-- 闪屏页主题 -->
    <style name="Design.App.Splash">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
    </style>

    <!-- WebView 主题 -->
    <style name="Design.App.Web">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!-- 图片浏览主题 -->
    <style name="Design.Gallery" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
    </style>

    <!-- 默认 dialog 主题 -->
    <style name="Design.DialogAlert.Theme" parent="@style/ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/Design.DialogAlert.Positive.ButtonStyle
        </item>
        <item name="buttonBarNegativeButtonStyle">@style/Design.DialogAlert.Negative.ButtonStyle
        </item>
    </style>

    <style name="Design.DialogAlert.Style" parent="@style/AlertDialog.AppCompat.Light">
        <item name="buttonBarPositiveButtonStyle">@style/Design.DialogAlert.Positive.ButtonStyle
        </item>
        <item name="buttonBarNegativeButtonStyle">@style/Design.DialogAlert.Negative.ButtonStyle
        </item>
    </style>

    <style name="Design.DialogAlert.Positive.ButtonStyle" parent="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Design.DialogAlert.Negative.ButtonStyle" parent="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/text_999999</item>
    </style>

    <!-- toolbar 主题-->
    <style name="Design.Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/Design.Toolbar.Title</item>
    </style>

    <style name="Design.Toolbar.Title" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- actionbar 主题-->
    <style name="Design.ActionOverflowButtonStyle" parent="@style/Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_moreoverflow_material_dark</item>
    </style>

    <style name="Design.AppBar.Theme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>
</resources>