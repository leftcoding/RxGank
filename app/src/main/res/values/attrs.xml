<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 自定义文本 start -->
    <attr name="textTitle" format="reference|string" />
    <attr name="textSummary" format="reference|string" />
    <attr name="textTitleSize" format="reference|integer" />
    <attr name="textSummarySize" format="reference|integer" />
    <attr name="textTitleColor" format="reference|color" />
    <attr name="textSummaryColor" format="reference|color" />
    <!-- 自定义文本 end -->

    <!--glide 自定义控件 带进度条-->
    <declare-styleable name="ProgressImageView">
        <attr name="showProgressText" format="boolean" />
        <attr name="showProgressBar" format="boolean" />
    </declare-styleable>

    <!-- 选择开关 -->
    <declare-styleable name="ItemSwitchView">
        <attr name="summaryVisible" format="boolean" />
        <attr name="textTitle" />
        <attr name="textSummary" />
        <attr name="textTitleSize" />
        <attr name="textSummarySize" />
        <attr name="textTitleColor" />
        <attr name="textSummaryColor" />
    </declare-styleable>

    <!-- 自定义文本 -->
    <declare-styleable name="ItemTextView">
        <attr name="textTitle" />
        <attr name="textSummary" />
        <attr name="textTitleSize" />
        <attr name="textSummarySize" />
        <attr name="textTitleColor" />
        <attr name="textSummaryColor" />
    </declare-styleable>

    <!-- Loading Empty Error -->
    <declare-styleable name="MultipleStatusView">
        <attr name="content_view" format="reference" />
        <attr name="loading_view" format="reference" />
        <attr name="empty_view" format="reference" />
        <attr name="error_view" format="reference" />
        <attr name="no_network_view" format="reference" />
    </declare-styleable>

    <!-- 自定义主题-->
    <attr name="lyItemTextColor" format="reference|color" />

    <!-- Night Day Custom Colors start -->
    <attr name="themeBackground" format="reference|color" />
    <attr name="textPrimaryColor" format="reference|color" />
    <attr name="textSecondaryColor" format="reference|color" />
    <attr name="themeTabLayoutBackground" format="color" />
    <attr name="settingBackground" format="reference|color" />
    <attr name="baseAdapterItemBackground" format="reference|color" />
    <attr name="baseAdapterItemTextColor" format="reference|color" />
    <attr name="navigationBackground" format="reference|color" />
    <attr name="aboutTextViewBackground" format="reference|color" />
    <attr name="aboutBackground" format="reference|color" />
    <attr name="updateVersionButtonTextColor" format="reference|color" />
    <attr name="updateVersionBackgroundColor" format="reference|color" />
    <attr name="updateVersionTextColor" format="reference|color" />
    <attr name="collectBackground" format="reference|color" />
    <attr name="meiziDailyItemBackground" format="reference|color" />
    <attr name="lyItemSelectBackground" format="reference|color" />
    <attr name="swipeRefreshLayoutProgressSchemeColor" format="reference|color" />
    <attr name="swipeRefreshLayoutSchemeColors" format="reference|color" />
    <attr name="budejieAdapterTitleColor" format="reference|color" />
    <!-- 全局字体大小 -->
    <attr name="smallSize" format="reference|dimension" />
    <attr name="normalSize" format="reference|dimension" />
    <attr name="bigSize" format="reference|dimension" />
    <attr name="strongSize" format="reference|dimension" />
    <attr name="heavySize" format="reference|dimension" />
    <attr name="superSize" format="reference|dimension" />
    <attr name="superBigSize" format="reference|dimension" />
    <!-- Night Day Custom Colors end -->

    <!--recyclerView 是否带有侧滑-->
    <declare-styleable name="LySwipeRefreshLayout">
        <attr name="refreshState" format="enum">
            <enum name="normal" value="1" />
            <enum name="gesture" value="2" />
        </attr>
    </declare-styleable>
</resources>